{
  "name": "@tracer/contracts",
  "version": "0.1.0",
  "description": "Tracer Protocol",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@opengsn/gsn": "^2.0.3",
    "@openzeppelin/contracts": "^3.3.0",
    "@openzeppelin/contracts-upgradeable": "^3.2.0",
    "@openzeppelin/truffle-upgrades": "^1.3.1",
    "dotenv": "^8.2.0",
    "eth-sig-util": "^2.5.3",
    "ethers": "^5.0.24",
    "solhint": "^3.3.2",
    "truffle-contract-size": "^2.0.0"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.6",
    "@truffle/contract": "^4.3.3",
    "@typechain/ethers-v5": "^2.0.0",
    "@typechain/truffle-v5": "^2.0.2",
    "@typechain/web3-v1": "^1.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.14",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "ganache-cli": "^6.12.0",
    "ganache-core": "^2.13.1",
    "lodash": "^4.17.20",
    "mocha": "^8.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "solidity-docgen": "^0.5.11",
    "truffle": "^5.1.33",
    "truffle-assertions": "^0.9.2",
    "ts-node": "^9.1.1",
    "ts-priority-queue": "^0.1.1",
    "typechain": "^3.0.0",
    "typescript": "^4.0.3",
    "web3": "^1.3.0",
    "web3-core": "^1.3.0",
    "web3-eth-contract": "^1.3.0"
  },
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--max-old-space-size=4096 mocha test",
    "test:unit": "cross-env NODE_OPTIONS=--max-old-space-size=4096 mocha test/test-ts/unit/**",
    "test:functional": "cross-env NODE_OPTIONS=--max-old-space-size=4096 mocha test/test-ts/functional/**",
    "test:compile": "npm run clean:test && tsc -p ./tsconfig.test.json --outDir ./test",
    "ganache": "ganache-cli -l 8500000",
    "ganache:xl": "ganache-cli -l 85000000",
    "lint": "prettier ./**/*.ts --check",
    "lint:fix": "prettier ./**/*.ts --write",
    "clean": "npm-run-all -p clean:build clean:migrations",
    "clean:build": "rimraf ./build/",
    "clean:migrations": "rimraf ./migrations/",
    "clean:test": "rimraf ./test/",
    "precompile": "npm run clean",
    "compile": "npm-run-all compile:truffle generate-types compile:migrations compile:test",
    "compile:truffle": "npm run clean:build && truffle compile",
    "compile:migrations": "npm run clean:migrations && tsc -p ./tsconfig.migrate.json --outDir ./migrations",
    "compile:test": "npm run clean:test && tsc -p ./tsconfig.test.json --outDir ./test",
    "pretest": "npm run compile",
    "prepublishOnly": "npm run test",
    "generate-types": "npm-run-all -p generate-types:truffle generate-types:web3",
    "generate-types:truffle": "typechain --target=truffle-v5 'build/contracts/*.json'",
    "generate-types:web3": "typechain --target=web3-v1 'build/contracts/*.json'",
    "gsn:start": "gsn start",
    "postinstall": "npm run compile",
    "migrate": "truffle migrate",
    "typecheck": "tsc --noEmit -p ./tsconfig.migrate.json",
    "docs": "solidity-docgen -i contracts -o docs",
    "solhint": "./node_modules/.bin/solhint -f table contracts/**/*.sol"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {},
  "files": [
    "contracts",
    "build"
  ],
  "engines": {
    "node": ">=10"
  }
}
